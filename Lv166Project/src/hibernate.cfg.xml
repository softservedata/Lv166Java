<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">
      org.hibernate.dialect.MySQLDialect
   </property>
   <property name="hibernate.connection.driver_class">
      com.mysql.jdbc.Driver
   </property>

   <!-- Assume students is the database name -->
   <property name="hibernate.connection.url">
      jdbc:mysql://localhost/softserve_project
   </property>
   <property name="hibernate.connection.username">root</property>
   <property name="hibernate.connection.password">root</property>
   
   <property name="hbm2ddl.auto">create</property>
   <property name="hbm2ddl.auto">update</property>
   
   	<!-- mapping files -->
	<mapping class="com.softserve.edu.core.dto.User"/>
	<mapping class="com.softserve.edu.core.dto.Role"/> 
	<mapping class="com.softserve.edu.core.dto.Address"/> 
	<mapping class="com.softserve.edu.core.dto.PassportInfo"/> 
	<mapping class="com.softserve.edu.core.dto.ResourceType"/>
	<mapping class="com.softserve.edu.core.dto.Resource"/> 
	<mapping class="com.softserve.edu.core.dto.DiscreteValue"/>
	<mapping class="com.softserve.edu.core.dto.LineSize"/>
	<mapping class="com.softserve.edu.core.dto.ResourceParameters"/>
	<mapping class="com.softserve.edu.core.dto.Area"/>
	<mapping class="com.softserve.edu.core.dto.StoreOfLineSizes"/>
	<mapping class="com.softserve.edu.core.dto.StoreOfDiscreteValues"/>
	<mapping class="com.softserve.edu.core.dto.Owner"/>
	<mapping class="com.softserve.edu.core.dto.Tome"/>
	<mapping class="com.softserve.edu.core.dto.Inquiry"/>
		
</session-factory>
</hibernate-configuration>